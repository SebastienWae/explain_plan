{
  "name": "explain",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "bin": {
    "explain-cli": "./cli/index.ts"
  },
  "scripts": {
    "app:dev": "vite",
    "app:build": "tsc && vite build",
    "app:lint": "biome lint app",
    "app:format": "biome format app",
    "app:fix": "biome check --write app",
    "cli:dev": "bun ./cli/index.ts",
    "cli:build": "bun build ./cli/index.ts --compile --bytecode --outfile ./dist/explain-cli",
    "cli:lint": "biome lint cli",
    "cli:format": "biome format cli",
    "cli:fix": "biome check --write cli",
    "build": "bun run app:build && bun run cli:build",
    "lint": "biome lint .",
    "format": "biome format .",
    "fix": "biome check --write ."
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@tabler/icons-react": "^3.36.1",
    "@tailwindcss/vite": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "shadcn": "^3.8.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "^1.2.20",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "react-grab": "^0.0.98",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
